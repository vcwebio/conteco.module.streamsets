#!/usr/bin/env bash

# START CONFIGURATION
export CONTECO_DC_GLOBAL_STACKS="streamsets.base,nginx.rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES_PREVIOUS="streamsets,url_rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES="streamsets,ui_streamsets"
export CONTECO_DC_GLOBAL_BOOTSTACKS="streamsets"
export CONTECO_DC_GLOBAL_RUNSTACKS="ui_streamsets"
export CONTECO_DC_GLOBAL_VOLUME_LIST="conteco_dc_streamsets_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_UI_STREAMSETS_ENVIRONMENT_CONF_PATH,$CONTECO_DC_UI_STREAMSETS_ENVIRONMENT_CONF_UPSTREAM,$CONTECO_DC_UI_STREAMSETS_DEPLOY_LABELS,$CONTECO_DC_GLOBAL_VOLUMES'
# END CONFIGURATION

# START GLOBAL SETTINGS
DOLLAR='$'
export CONTECO_DC_UI_STREAMSETS_ENVIRONMENT_CONF_PATH="/${DOLLAR}{CONTECO_TYPE}/conteco_dc_streamsets"
export CONTECO_DC_UI_STREAMSETS_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{CONTECO_TYPE}_conteco_dc_streamsets_streamsets:18630"
export CONTECO_DC_UI_STREAMSETS_DEPLOY_LABELS="traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_ECOSYSTEM_RUNTIME}_overlay, traefik.http.services.${DOLLAR}{CONTECO_TYPE}_conteco_dc_streamsets_streamsets.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_TYPE}_conteco_dc_streamsets_streamsets.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_TYPE}_conteco_dc_streamsets_streamsets.rule=PathPrefix(\"/${DOLLAR}{CONTECO_URLPREFIX}\")"
# END GLOBAL SETTINGS

# START SETTINGS streamsets.base
export CONTECO_DC_STREAMSETS_DEPLOY_LABELS=
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="512m"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_STREAMSETS_DEPLOY_RESOURCES_LIMITS_MEMORY="768m"
# END SETTINGS streamsets.base
# START SETTINGS nginx.base
export CONTECO_DC_UI_STREAMSETS_VOLUMES=
export CONTECO_DC_UI_STREAMSETS_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_UI_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_UI_STREAMSETS_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_UI_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_TYPE}_overlay: { external: true }"
# END TOPLEVEL SETTINGS

